<%- include("./partials/head.ejs") %>

  <div class="container">
      <div class="search-container">
        <input id="query" type="text" placeholder="Enter title or author...">
        <input id="search" type="submit" value="Search">
      </div>
      <div class="booklist-header search">
        <h1 class="search-heading"></h1>
      </div>

      <div class="booklist">
      </div>

      <form id="book-form" action="/books" method="POST" style="display: none;">
        <div>
          <label for="title">Title</label>
          <input type="text" id="title" name="title" required />
        </div>
        <div>
          <label for="author">Author</label>
          <input type="text" id="author" name="author" required />
        </div>
        <div>
          <label for="rating">Rating</label>
          <input type="number" value="0" id="rating" name="rating" required />
        </div>
        <div>
          <label for="imgURL">Image URL</label>
          <input type="text" id="imgURL" name="imgURL" />
        </div>
        <div>
          <input type="submit" value="Add book" id="add" />
        </div>
      </form>
  </div>

  <div class="toast" style="display: none;">
    <h4>Success!</h4>
    <p>The book have been added to the library!</p>
  </div>

  <script src="/js/search.js"></script>